{
  "name": "Google Traslate Plugin",
  "version": "0.1",
  "description": "使用谷歌服务进行翻译的插件",
  "background": {
    "persistent": false,
    "scripts": ["tool_before.js","GT.js","tool.js","background.js","chrome_event.js"]
  },
  "manifest_version": 2,
  "permissions": ["activeTab","tabs","contextMenus","https://translate.google.cn/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["translate.css"],
      "js": ["googleTranslate.js","content_script_demo.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "index.html"
  },
  "commands": {
    "triggerTranslateKey": {
      "suggested_key": {
        "default": "Ctrl+Z"
      },
      "description": "触发翻译的快捷键"
    }
  }
}